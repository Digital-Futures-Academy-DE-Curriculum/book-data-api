{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules", "dist"]
}
